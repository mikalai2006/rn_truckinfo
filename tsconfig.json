{
    "extends": "@tsconfig/react-native/tsconfig.json",

    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "jsx": "react-native",
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true,

        "strict": true,

        "moduleResolution": "node",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "~*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules"]
}
